@using Assignment5Project.Models
@model Assignment5Project.Models.MusicGenreViewModel
        

@{
    ViewData["Title"] = "Index";
}

<h1>Admin</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Musics" asp-action="Index">
    <p>
        <select asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <select asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString"  formmethod="get"/>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Musics!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
